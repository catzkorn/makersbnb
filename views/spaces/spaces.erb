 <head>
    <title>MakersBNB</title>
    <link rel="stylesheet" href="/css/bootstrap.css">
    <link rel ="stylesheet" href="/styles.css">
  </head>

<% if flash[:notice] %>
  <div class="alert alert-success" role="alert">
    <%= flash[:notice] %>
  </div>
<% end %>

<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="#">MakersBnB</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
    <div class="navbar-nav">
      <a class="nav-link active" href="/spaces">Home <span class="sr-only">(current)</span></a>
      <a class="nav-link" href="/spaces/new">Add Space</a>
      <a class="nav-link" href="<%= "/spaces/" + session[:user] %>">View My Spaces</a>
    </div>
  </div>
</nav>

<div class='title'>
<h1>List of all spaces!</h1>
</div>

<ul class='spaces'>
  <% @spaces.each do |space| %>
  <li>
    <img src='/img/home.png'>
    <h3><%= space.name %></h3> <br>
    <div><%= space.price %></div> <br>
    <div><%= space.description %></div><br>
    <br>
    <form action="/space/<%= space.space_id %>" method="get">
    <input type="submit" name="<%= space.space_id %>" value="View Space" class='space_button' />
    </form>

  <% end %>
</ul>

<form action="/sessions/destroy" method="post" class="signout">
  <input type="submit" value="Sign out"/>
</form>